@model ProjectVM
<form asp-action="Edit" asp-controller="Project" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input type="text" asp-for="Name" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Href" class="form-label"></label>
        <input type="text" asp-for="Href" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="PathImage" class="form-label"></label>
        <input type="file" asp-for="PathImage" class="form-control">

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>